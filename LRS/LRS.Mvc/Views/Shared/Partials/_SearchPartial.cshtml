
<style>
    #SearchData {
        width: 100%;
        box-sizing: border-box;
        height: 30px !important;
        padding: 5px !important;
    }

    #fsSPan.span {
        display: block;
        overflow: hidden;
    }

    #fsheader {
        text-transform: none!important; 
        padding-top: 5px; 
        padding-bottom: 0; 
        padding-left: 5px;
    }

    div.fsearch {
        margin: 0 5px;
    }
    
</style>

@using (Html.BeginForm("SearchArtifact", "LookUp", FormMethod.Post, new { id = "filterSearchForm" }))
{
    @Html.AntiForgeryToken()
    @Html.Hidden("SearchLocation")
    <div id="searchDiv" class="col-md-4" style="width: 350px;">
        <div class="panel panel-default">
            <div class="panel-heading" id="fsheader">
                <div class="pull-left fsearch"><h6 style="color: #999999;">Find:</h6></div>
                <div class="pull-left fsearch"><span id="fsSPan">@Html.TextBox("SearchData")</span></div>
                <div class="pull-left" style="margin-top: 2px; margin-left: 5px;"><button type="submit" class="btn btn-xs btn-info">Search</button></div>
                <div class="clearfix"></div>
                <div class="group-option">
                    <label class="radio-inline">@Html.CheckBox("IncludeTitle", false) Title</label>
                    <label class="radio-inline">@Html.CheckBox("IncludeAbstract", false) Abstract</label>
                    <label class="radio-inline">@Html.CheckBox("IncludeReviewer", false) Reviewer</label>
                </div>
            </div>
        </div>
    </div>
}