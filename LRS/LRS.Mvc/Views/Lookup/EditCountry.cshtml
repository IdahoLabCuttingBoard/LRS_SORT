@using LRS.Business
@using LRS.Mvc.Classes
@model LRS.Business.CountryObject
@{
    ViewBag.Title = (Model.CountryId > 0 ? "Edit" : "Add") + " Country";
    Breadcrumb.Add("Dashboard", "/")
        .Next("Lookup Data", Url.Action("Index", "Lookup"))
        .Next("Countries", Url.Action("Countries", "Lookup"))
        .Next(ViewBag.Title);
}

<div class="col-md-12">
    <div class="panel panel-primary">
        <div class="panel panel-heading">
            <h3 class="panel-title">@ViewBag.Title</h3>
        </div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.CountryId)
            <div class="panel-body form-horizontal">
                <div class="form-group">
                    <label class="control-label col-md-3">Country Name</label>
                    <div class="col-md-9">
                        @Html.BsTextBoxFor(m => m.Country)
                        @Html.ValidationMessageFor(m => m.Country)
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">Country Code</label>
                    <div class="col-md-9">
                        @Html.BsTextBoxFor(m => m.CountryCode)
                        @Html.ValidationMessageFor(m => m.CountryCode)
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">Active</label>
                    <div class="col-md-1">
                        @Html.BsCheckBoxFor(m => m.Active)
                        @Html.ValidationMessageFor(m => m.Active)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-3 col-md-9">
                        <button type="submit" class="btn btn-primary">Save</button>
                        <a href="@Url.Action("Countries")" class="btn btn-default">Cancel</a>
                    </div>
                </div>
            </div>}
    </div>
</div>
