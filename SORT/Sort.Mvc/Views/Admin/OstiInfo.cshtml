@using Sort.Mvc.Classes
@model Sort.Mvc.Models.OstiModel

@{
    ViewBag.Title = "OSTI Information Setup";
    Breadcrumb.Add("Home", "/")
        .Next(ViewBag.Title);
}

<div class="col-md-8">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <div class="panel-title">
                <div class="pull-left">@ViewBag.Title</div>
                <div class="clearfix"></div>
            </div>
        </div>
        <div class="panel-body form-horizontal">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "")
                <div class="form-group">
                    @Html.BsLabelFor(m => m.Username, new { @class = "col-md-4" })
                    <div class="col-md-8">
                        @Html.BsTextBoxFor(m => m.Username)
                        @Html.ValidationMessageFor(m => m.Username)
                    </div>
                </div>
                <div class="form-group">
                    @Html.BsLabelFor(m => m.NewPassword, new { @class = "col-md-4" })
                    <div class="col-md-8">
                        @Html.BsPasswordFor(m => m.NewPassword)
                        @Html.ValidationMessageFor(m => m.NewPassword)
                    </div>
                </div>
                <div class="form-group">
                    @Html.BsLabelFor(m => m.ConfirmPassword, new { @class = "col-md-4" })
                    <div class="col-md-8">
                        @Html.BsPasswordFor(m => m.ConfirmPassword)
                        @Html.ValidationMessageFor(m => m.ConfirmPassword)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-4 col-md-8">
                        <input type="submit" value="Change password" class="btn btn-primary" />
                        <a href="@Url.Action("Index")" class="btn btn-default">Cancel</a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>


@section Scripts {
    <script src="~/Scripts/jquery.validate.min.js"></script>
}