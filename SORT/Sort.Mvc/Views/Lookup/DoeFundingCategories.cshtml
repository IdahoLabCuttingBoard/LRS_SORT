@using Sort.Mvc.Classes
@model List<Sort.Business.DoeFundingCategoryObject>
@{
    ViewBag.Title = "DOE Funding Category";
    Breadcrumb.Add("Dashboard", "/")
        .Next("Lookup Data", Url.Action("Index", "Lookup"))
        .Next(ViewBag.Title);
}

<div class="col-md-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            <div class="panel-title">
                <div class="pull-left">@ViewBag.Title</div>
                <div class="pull-right">
                    <a href="@Url.Action("EditDoeFundingCategory")" class="btn btn-xs btn-primary"><i class="fa fa-plus"></i></a>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
        <div class="panel-body panel-grid">
            @(Html.Talon().Grid(Model).Name("DoeTable").Columns(c =>
              {
                  c.Bound(x => x.DoeFundingCategoryId).Hidden();
                  c.Bound(x => x.Description).Order().Title("Name").Href(Url.Action("EditDoeFundingCategory", "Lookup", new { id = "{DoeFundingCategoryId}" }));
                  c.Bound(x => x.OstiRequiredDescription).Title("OSTI Required Description");
                  c.Bound(x => x.CoverSheetDescription).Title("Cover Sheet Description");
                  c.Bound(x => x.Category);
                  c.Bound(x => x.Active).Width(100);
              }))
        </div>
    </div>
</div>
