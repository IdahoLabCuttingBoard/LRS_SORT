@using Sort.Mvc.Classes
@model List<Sort.Business.JournalObject>
@{
    ViewBag.Title = "Journal Suggestions";
    Breadcrumb.Add("Dashboard", "/")
        .Next("Lookup Data", Url.Action("Index", "Lookup"))
        .Next(ViewBag.Title);
}

<div class="col-md-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            <div class="panel-title">
                <div class="pull-left">@ViewBag.Title</div>
                <div class="pull-right">
                    <a href="@Url.Action("EditJournalSuggestion")" class="btn btn-xs btn-primary"><i class="fa fa-plus"></i></a>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
        <div class="panel-body panel-grid">
            @(Html.Talon().Grid(Model).Name("JournalTable").Columns(c =>
              {
                  c.Bound(x => x.JournalId).Hidden();
                  c.Bound(x => x.JournalName).Title("Journal Name").Href(Url.Action("EditJournalSuggestion", "Lookup", new { id = "{JournalId}" }));
                  c.Bound(x => x.Active).Width(100);
              }))
        </div>
    </div>
</div>
