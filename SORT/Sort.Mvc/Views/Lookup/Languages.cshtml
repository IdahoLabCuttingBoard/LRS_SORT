@using Sort.Mvc.Classes
@model List<Sort.Business.LanguageObject>
@{
    ViewBag.Title = "Languages";
    Breadcrumb.Add("Dashboard", "/")
        .Next("Lookup Data", Url.Action("Index", "Lookup"))
        .Next(ViewBag.Title);
}

<div class="col-md-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            <div class="panel-title">
                <div class="pull-left">@ViewBag.Title</div>
                <div class="pull-right">
                    <a href="@Url.Action("EditLanguage")" class="btn btn-xs btn-primary"><i class="fa fa-plus"></i></a>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
        <div class="panel-body panel-grid">
            @(Html.Talon().Grid(Model).Name("CountryTable").Columns(c =>
              {
                  c.Bound(x => x.LanguageId).Hidden();
                  c.Bound(x => x.Language).Href(Url.Action("EditLanguage", "Lookup", new { id = "{LanguageId}" }));
                  c.Bound(x => x.Active).Width(100);
              }))
        </div>
    </div>
</div>
