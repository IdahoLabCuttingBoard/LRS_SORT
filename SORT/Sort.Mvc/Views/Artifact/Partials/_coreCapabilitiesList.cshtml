@model List<Sort.Business.SortMetaDataObject>

<div class="form-group col-md-12">
    @Html.Talon().Grid(Model).Name("CoreCapabilitiesTbl").Columns(c =>
    {
        c.Bound(m => m.MetaDataId).Hidden();
        c.Bound(m => m.MetaDataType).Hidden();
        c.Bound(m => m.Data).Title("Core Capability").Sortable(false);
        c.Buttons(b =>
        {
            b.Button("RemoveCoreCapability").Icon("times").Type("danger").Title("Remove").ToolTip("Remove Core Capability");
        }).Width(30).AlignCenter().NoWrap();
    }).Clean()
</div>